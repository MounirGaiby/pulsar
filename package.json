{
  "name": "app",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.9",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "tailwindcss": "^4.1.13"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --minify --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build-dev": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "tailwindcss -i ./app/assets/tailwind/application.css -o ./app/assets/builds/application.css --minify"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16",
    "daisyui": "^5.1.14",
    "turbo_power": "^0.7.1"
  }
}
