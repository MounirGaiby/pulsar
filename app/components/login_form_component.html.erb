<div class="card w-full max-w-md shadow-xs bg-base-100 mx-auto">
  <div class="card-body">
    <h1 class="card-title mb-4"><%= t('sessions.new.title') %></h1>
    <%= helpers.simple_form_for :session, url: @url, method: :post, html: { class: "space-y-4" } do |f| %>
      <div class="form-control">
        <%= f.input_field :email_address, as: :email, placeholder: t('sessions.new.email'), class: "input input-bordered w-full", required: true, autocomplete: "username" %>
      </div>
      <div class="form-control">
        <%= f.input_field :password, as: :password, placeholder: t('sessions.new.password'), class: "input input-bordered w-full", required: true, autocomplete: "current-password" %>
      </div>
      <div>
        <button type="submit" class="btn btn-primary w-full flex items-center justify-center gap-2">
          <%= icon "log-in", library: "lucide", class: "h-5 w-5" %>
          <%= t('sessions.new.submit') %>
        </button>
      </div>
    <% end %>
  </div>
</div>
