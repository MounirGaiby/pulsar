<section class="fixed top-16 right-4 z-50" aria-live="polite">
  <div data-controller="flash" class="space-y-2">
    <% flash.each do |type, message| %>
      <% i18n_key = "flash.#{type}" %>
      <% kind = type == 'alert' ? 'error' : 'success' %>
      <div
        role="status"
        tabindex="0"
        data-flash-timeout="6000"
        data-flash-type-value="<%= kind %>"
      >
        <div class="alert alert-<%= kind %> shadow-lg">
          <div class="flex-1">
            <label><%= t(i18n_key, default: message) %></label>
          </div>
          <div class="flex-none">
            <button type="button" class="btn btn-ghost btn-sm" aria-label="Dismiss" title="Dismiss">&times;</button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
