<div class="flash-item" role="status" tabindex="0" data-flash-type-value="<%= type %>">
  <div class="alert alert-<%= type %> shadow-xs border border-base-300 flash-alert">
    <div class="flex-1">
      <% icon_name = case type.to_sym
        when :success then "check-circle"
        when :error then "x-circle"
        when :warning then "alert-triangle"
        when :info then "info"
        else "info"
        end
      %>
      <div class="flash-icon">
        <%= icon icon_name, library: "lucide", class: "w-5 h-5" %>
      </div>
      <label class="flash-message"><%= message %></label>
    </div>
    <div class="flex-none">
      <button
        type="button"
        class="flash-close btn btn-circle btn-ghost btn-sm"
        aria-label="<%= t('flash.close', default: 'Dismiss') %>"
      >
        <%= icon "x", library: "lucide", class: "w-4 h-4" %>
      </button>
    </div>
  </div>
</div>
