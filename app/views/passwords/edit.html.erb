<div class="card-container">
  <% if alert = flash[:alert] %>
    <p class="alert alert-danger" id="alert"><%= alert %></p>
  <% end %>

  <h1 class="heading-1 mb-4"><%= t('.title') %></h1>

  <%= simple_form_for :password, url: password_path(params[:token]), method: :put, html: { class: "space-y-4" } do |form| %>
    <div class="form-group">
      <%= form.input :password, label: t('.password'), input_html: { class: "input", required: true, autocomplete: "new-password", maxlength: 72 } %>
    </div>
    <div class="form-group">
      <%= form.input :password_confirmation, label: t('.password_confirmation'), input_html: { class: "input", required: true, autocomplete: "new-password", maxlength: 72 } %>
    </div>
    <div>
      <button type="submit" class="btn-primary w-full">
        <%= t('.submit') %>
      </button>
    </div>
  <% end %>
</div>
