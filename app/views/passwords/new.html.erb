<div class="card-container">
  <% if alert = flash[:alert] %>
    <p class="alert alert-danger" id="alert"><%= alert %></p>
  <% end %>

  <h1 class="heading-1 mb-4"><%= t('.title') %></h1>

  <%= simple_form_for :password, url: passwords_path, html: { class: "space-y-4" } do |form| %>
    <div class="form-group">
      <%= form.input :email_address, label: t('.email'), input_html: { class: "input", required: true, autofocus: true, autocomplete: "username", value: params[:email_address] } %>
    </div>
    <div>
      <button type="submit" class="btn-primary w-full">
        <%= t('.submit') %>
      </button>
    </div>
  <% end %>
</div>
